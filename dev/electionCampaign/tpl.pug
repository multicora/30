//- Markup
.election-campaign
  span
    .size-2-col-6 Election campaign
    .size-2-col-6.size-0-hide
      +text-1
  .block
    +image-1
    span.size-0-hide
      +image-3

  .block
    +image-2

    .size-min-1-hide
      +text-1
      +image-3

    +image-4